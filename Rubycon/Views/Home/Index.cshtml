@model Rubycon.Models.Triangle

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


<div class="row">
    <div class="col-md-6">
        @using (Ajax.BeginForm("TrianglePostAsync", "Home",
                            new AjaxOptions
                            {
                                UpdateTargetId = "result"
                            }))
        {
            @:Enter Triangle Name (Format: C12): <br />
            @Html.EditorFor(x => x.Name)


            <input type="submit" value="submit" />
        }
    </div>

    <div class="col-md-6">
        @using (Ajax.BeginForm("NamePostAsync", "Home",
                            new AjaxOptions
                            {
                                UpdateTargetId = "result"
                            }))
        {
            @:Enter Triangle Point A Coordinates (Format: 30, 20): <br />
            <input type="text" name="pointA" value="" /><br />
            @:Enter Triangle Point B (Apex) Coordinates (Format: 40, 20): <br />
            <input type="text" name="pointB" value="" /><br />
            @:Enter Triangle Point C Coordinates (Format: 40, 30): <br />
            <input type="text" name="pointC" value="" /><br />

            <input type="submit" value="submit" />
        }
    </div>
</div>
<div id="result">
    @{Html.RenderPartial("Home");}
</div>
